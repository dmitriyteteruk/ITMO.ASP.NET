@model IEnumerable<ITMO.ASP.NET_Practice_05_MvcCreditApp1.Models.Credit>

@{
    ViewBag.Title = "Кредиты";
}

<h2>Кредиты</h2>

<p>
    @Html.ActionLink("Создать новый кредит", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Head)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Period)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sum)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.Procent)&nbsp;%
		</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Head)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Period)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.Procent)&nbsp;%
		</td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.CreditId }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.CreditId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.CreditId })
        </td>
    </tr>
}

</table>
